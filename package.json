{
  "name": "matrix-neoboard-standalone",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:https": "VITE_DEV_SSL=true vite",
    "preview": "vite preview",
    "preview:https": "VITE_DEV_SSL=true vite preview",
    "build": "tsc && vite build",
    "test": "jest",
    "test:all": "jest --coverage --watchAll=false",
    "lint": "eslint . --max-warnings 0",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "prepare": "husky",
    "depcheck": "depcheck --ignores=@babel/plugin-proposal-private-property-in-object,@babel/plugin-transform-private-property-in-object,@changesets/cli,@swc/core,@swc/jest,@testing-library/dom,@testing-library/jest-dom,@testing-library/react,@testing-library/react-hooks,@types/jest,@types/jest-axe,@typescript-eslint/eslint-plugin,@typescript-eslint/parser,jest-axe,jest-mock,jest-environment-jsdom,prettier-plugin-organize-imports,identity-obj-proxy",
    "deduplicate": "yarn-deduplicate",
    "translate": "i18next \"src/**/*.{ts,tsx}\"",
    "generate-disclaimer": "cp LICENSE ./build/LICENSE.txt && cp NOTICE ./build/NOTICE.txt && yarn licenses generate-disclaimer --prod >> ./build/NOTICE.txt && yarn licenses list --prod --json --no-progress > ./build/licenses.json",
    "docker:build": "sh -c \"${CONTAINER_CLI:-docker} build -t nordeck/matrix-neoboard-standalone .\"",
    "docker:run": "sh -c \"${CONTAINER_CLI:-docker} run -p 8888:8080 --rm --name matrix-neoboard-standalone nordeck/matrix-neoboard-standalone\""
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": "^1.22.1"
  },
  "dependencies": {
    "@matrix-widget-toolkit/api": "^3.2.1",
    "@matrix-widget-toolkit/mui": "^2.0.0",
    "@mui/icons-material": "^5.15.17",
    "@mui/material": "^5.15.15",
    "@mui/utils": "^5.15.14",
    "@nordeck/matrix-neoboard-react-sdk": "link:../matrix-neoboard/packages/react-sdk",
    "@reduxjs/toolkit": "^2.2.5",
    "i18next": "^23.7.16",
    "i18next-chained-backend": "^4.6.2",
    "i18next-http-backend": "^2.5.2",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "loglevel": "^1.9.1",
    "matrix-js-sdk": "^32.0.0",
    "matrix-widget-api": "^1.6.0",
    "oidc-client-ts": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.0",
    "react-redux": "^9.1.2",
    "rxjs": "^7.8.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-private-property-in-object": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@changesets/cli": "^2.27.1",
    "@swc/core": "^1.4.16",
    "@swc/jest": "^0.2.36",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.12",
    "@types/jest-axe": "^3.5.9",
    "@types/lodash": "^4.17.0",
    "@types/react": "18.3.2",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-promise": "^6.1.1",
    "fetch-mock": "^9.11.0",
    "fetch-mock-jest": "^1.5.1",
    "husky": "^9.0.11",
    "i18next-parser": "^8.13.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "yarn-deduplicate": "^6.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "bash -c \"yarn tsc --pretty\"",
      "prettier --write"
    ],
    "*.{package.json,js,jsx,ts,tsx}": [
      "bash -c \"yarn depcheck\""
    ],
    "*.{json,js,jsx,ts,tsx}": [
      "bash -c \"yarn translate --fail-on-update\""
    ],
    "*.{yaml,yml,json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nordeck/matrix-neoboard.git"
  },
  "bugs": {
    "url": "https://github.com/nordeck/matrix-neoboard/issues"
  }
}
